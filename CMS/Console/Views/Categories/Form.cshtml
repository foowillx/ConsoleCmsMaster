@model ConsoleCMS.Models.POCOs.CategoriesModel

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isNew = false;
}

@if (Model != null)
{
    <h3><i class="fa fa-angle-right"></i> Editar Categoria</h3>
}
else
{
    isNew = true;
    <h3><i class="fa fa-angle-right"></i> Crear Categoria</h3>
}
<h4 align="right"><a href="@Url.Action("Index", "Categories")"><span class="glyphicon glyphicon-chevron-left">Regresar</span></a></h4>
<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Completa los campos</h4>
            @using (Html.BeginForm("Form", "Categories", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal style-form", role = "form", id = "UserForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Color</label>
                    <div class="col-sm-10">
                        <select id="Color" name="Color" class="form-control" required>
                            <option value="" disabled selected>Selecciona una opción</option>
                            <option value="0">Naranja</option>
                            <option value="2">Verde</option>
                            <option value="1">Rosa</option>
                            <option value="3">Azul</option>
                        </select>
                    </div>
                </div>

                if (!isNew)
                {
                    @Html.HiddenFor(x => x.Id)
                }
                <button type="submit" class="btn btn-theme">Continuar</button>
            }
        </div>
    </div><!-- col-lg-12-->
</div><!-- /row -->
@if (!isNew)
{
    <script>
        $("#Color").val('@Model.Color')
    </script>
}

